# Database Configuration
DATABASE_URL=postgresql+asyncpg://ardha_user:ardha_password@localhost:5432/ardha_dev
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_PREFIX=ardha_dev

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenRouter AI Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_TIMEOUT=300
OPENROUTER_MAX_RETRIES=3
OPENROUTER_CIRCUIT_BREAKER_THRESHOLD=3
OPENROUTER_CIRCUIT_BREAKER_COOLDOWN=300

# Application Configuration
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Optional: OAuth Configuration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Optional: File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Optional: Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Optional: CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# Optional: Session Configuration
SESSION_SECRET_KEY=your-session-secret-key-change-this
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true